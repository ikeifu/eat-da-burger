<div class="container">
  <img src="/images/burger.png">
  <h1>Eat-Da-Burger!</h1>

  <div class="all-burgers-view">
    <div class="burger-view">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="burger-view">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <form class="create-form">
    <input type="text" id="burger-name" name="burger_name">
    <br>
    <button type="submit">Add Burger</button>
  </form>

  <h2>Enter a burger you want to eat!</h2>
</div>